extends layout

block content
  h1 New Message
  form(method='POST', action='/new')
    div
      label(for='name') Name:
      input#name(type='text', name='name', required)
    div
      label(for='message') Message:
      textarea#message(name='message', rows='5', cols='33', maxlength='250', required)
    div(class='form-buttons')
      input(class='submit', type='submit', value='Submit')
      button(class='back', onclick="location.href='/'") Back to Messages

